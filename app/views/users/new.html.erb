<h1 id="header" class="text-center">Advice Board</h1>
<div id="signInStuff">
  <div class="container h-100">
      <div class="row h-30 justify-content-center align-items-center">
        <div class="col">
            <%= flash[:message] %>
        </div>
        <div class="w-100"></div>
        <div class="col">
            <%= form_for @user do |f| %>
              <%= f.text_field :name %><br>
              <%= f.submit "Complete Registration", class:"btn btn-link" %>
            <% end %>
        </div>
        <div class="w-100"></div>
        <div class="col">
        <%= link_to "Return to Sign In", login_page_path, id: "white" %>
        </div>
      </div>
    </div>   
</div>





